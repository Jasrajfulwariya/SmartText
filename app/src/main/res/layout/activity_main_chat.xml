<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <Toolbar
        android:id="@+id/chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mediumBlue">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:background="@color/mediumBlue"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Profile_Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:background="@color/mediumBlue"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/callTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call History"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/Profile_Image"
            android:background="@color/mediumBlue"
            android:textColor="#FFFFFF"
            android:paddingLeft="25dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/callTextview"
            android:paddingLeft="120dp"
            android:background="@color/mediumBlue"
            />
    </Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatrecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chat_toolbar"
        android:layout_alignParentBottom="true"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/chat_bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/chatrecycle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-50dp"
        android:background="@color/white">
        <EditText
            android:layout_margin="4dp"
            android:id="@+id/chatEditText"
            android:background="@drawable/rounded_corner_chat_edit_text"
            android:layout_width="350dp"
            android:layout_height="50dp" />
        <ImageView
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/chatEditText"
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </RelativeLayout>
</RelativeLayout>