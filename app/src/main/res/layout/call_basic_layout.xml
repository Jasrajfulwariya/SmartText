<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/GREY">

    <android.support.design.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/callactivelist"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/callImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/callname"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/callImage"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:textColor="@color/mediumBlue" />

        <TextView
            android:id="@+id/calllastseen"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@id/callname"
            android:layout_toRightOf="@id/callImage"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:textColor="@color/mediumBlue" />

        <ImageButton
            android:id="@+id/callbutton"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="260dp"
            android:layout_toRightOf="@+id/callImage"
            android:background="#FFFFFF"
            android:src="@drawable/ic_phone_black_24dp" />
    </android.support.design.circularreveal.CircularRevealRelativeLayout>
</android.widget.RelativeLayout>