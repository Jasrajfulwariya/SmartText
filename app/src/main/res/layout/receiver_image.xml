<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp">
        <com.jgabrielfreitas.core.BlurImageView
            android:id="@+id/subChatRecViewReceiveImage"
            android:layout_margin="20dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/user"
            android:background="@drawable/chat_image_background"/>
        <ImageButton
            android:id="@+id/subChatRecViewDownload"
            android:src="@drawable/ic_file_download_blue_24dp"
            android:background="@drawable/background_rounded_download_image"
            android:layout_centerInParent="true"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </RelativeLayout>
</RelativeLayout>