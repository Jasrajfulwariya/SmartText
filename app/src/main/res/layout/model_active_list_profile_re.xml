<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/modelActiveRecProfilePicFrame"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_circle_background_color="@color/white"
            android:layout_width="64dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/gray"
            android:id="@+id/modelActiveRecProfilePic"
            android:background="@drawable/user"
            android:layout_height="64dp" />
        <ImageView
            android:layout_margin="2dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/circle_green_active"
            android:layout_width="16dp"
            android:layout_height="16dp" />
    </FrameLayout>
    <TextView
        android:id="@+id/modelActiveRecName"
        android:gravity="center"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/modelActiveRecProfilePicFrame"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="my name"/>

</RelativeLayout>