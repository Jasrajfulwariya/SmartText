<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modelContactRelativeLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white">
    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/modelContactProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_background" />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/modelContactProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/modelContactName"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:textColor="@color/mediumBlue" />

        <TextView
            android:id="@+id/modelContactPhoneNo"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@id/modelContactName"
            android:background="@color/white"
            android:textColor="@color/mediumBlue" />

    </RelativeLayout>
</RelativeLayout>